<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.forms.ReportFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="20dp">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/editSwitchReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:text="@string/edit"
            app:useMaterialThemeColors="false" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputStyleBlocked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/patient">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/patientReportEditText"
                style="@style/TextInputEditBlocked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputStyleBlocked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/specialist">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/specialistReportEditText"
                style="@style/TextInputEditBlocked"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/specialistTypeReportTextInput"
            style="@style/TextInputStyleBlocked"
            android:hint="@string/specialist_type">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/specialistTypeReportEditText"
                style="@style/TextInputEditBlocked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputStyleBlocked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/treatment">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/treatmentReportEditText"
                style="@style/TextInputEditBlocked"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/diagnosisReportInputLayout"
            style="@style/TextInputStyle"
            android:hint="@string/diagnosis">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/diagnosisReportEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:lines="3" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/objetivesReportInputLayout"
            style="@style/TextInputStyle"
            android:hint="@string/objetives">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/objetivesReportEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:lines="3" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dateReportInputLayout"
            style="@style/TextInputStyleBlocked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/date_clean">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dateReportEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelReportButton"
            style="@style/CancelButton"
            android:text="@string/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveReportButton"
            style="@style/SaveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>