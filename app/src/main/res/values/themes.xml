<!--    <item name="strokeColor">@color/black</item>-->
    <style name="DateSelectorButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- SAVE BUTTON FORMS STYLE -->
    <style name="SaveButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:text">@string/save</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- DELETE BUTTON FORM STYLE -->
    <style name="DeleteButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:text">@string/deleteButton</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/mtsBefore</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!-- CANCEL BUTTON FORMS STYLE -->
    <style name="CancelButton">
        <item name="android:text">@string/cancel</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- HEADER GRADIENT STYLE -->
    <style name="GradientHeaderView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/profile_background_gradient</item>
    </style>

    <!-- TITLE FORM TEXT VIEW FORMS STYLE -->
    <style name="TitleFormsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- CIRCLE IMAGE FORMS STYLE -->
    <style name="CircleImageForms">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="civ_border_color">@color/primaryColor</item>
    </style>

    <!-- CIRCLE IMAGE RECYCLER STYLE -->
    <style name="CircleImageRecycler">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="civ_border_color">@color/primaryColor</item>
    </style>

    <!-- SCROLL VIEW FORMS STYLE -->
    <style name="ScrollViewForms">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!-- DROP DOWN OPTION FORMS -->
    <style name="DropDownOptionForms" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="endIconMode">dropdown_menu</item>
    </style>

    <!-- GO BACK ARROW FORMS STYLE -->
    <style name="GoBackArrowForms">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_24</item>
    </style>

    <style name="Fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:src">@drawable/ic_baseline_add_24</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- MAIN CARD VIEW STYLE -->
    <style name="MainCardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:layout_rowWeight">1</item>
    </style>

    <!-- MAIN ICON CARD VIEW SIZE STYLE-->
    <style name="ImageViewIconCardViewMain">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <!-- TITLE CARDS VIEW MAIN STYLE-->
    <style name="TextViewCardViewMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- TITLE SEPARATOR REGISTER FORM STYLE-->
    <style name="RegisterFormFragmentTitles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- PARAGRAPH WELCOME FRAGMENT STYLE -->
    <style name="WelcomeFragmentParagraphStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>





</resources>