<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Yapp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="hintTextColor">@color/primaryDarkColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Yapp.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- TEXT INPUT FORMS STYLE -->
   <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
       <item name="boxStrokeColor">@color/primaryDarkColor</item>
       <item name="boxStrokeWidth">1dp</item>
       <item name="android:layout_marginStart">20dp</item>
       <item name="android:layout_marginEnd">20dp</item>
       <item name="android:layout_marginTop">2dp</item>
       <item name="android:textColorHint">@color/black</item>
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="endIconMode">clear_text</item>
       <item name="endIconCheckable">true</item>
   </style>

    <!--TODO intentar que al activarse se ponga del color principal-->
    <!-- SWITCH FORMS STYLE -->
    <style name="SwitchTheme" >
        <item name="colorOnSurface">@color/blue_main</item>
        <item name="colorSecondary">@color/blue_main</item>
        <item name="android:checked">true</item>
    </style>

