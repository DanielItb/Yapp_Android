<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Yapp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


   <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
       <item name="boxStrokeColor">@color/purple_700</item>
       <item name="boxStrokeWidth">1dp</item>
       <item name="android:layout_marginStart">20dp</item>
       <item name="android:layout_marginEnd">20dp</item>
       <item name="android:textColorHint">@color/black</item>
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="hintTextColor">@color/blue_main</item>
       <item name="endIconMode">clear_text</item>
       <item name="endIconCheckable">true</item>
   </style>

    <style name="SwitchTheme" >
        <item name="colorOnSurface">@color/blue_main</item>
        <item name="colorSecondary">@color/blue_main</item>
    </style>

    <style name="BirthDateButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">5dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:alpha">0.50</item>
    </style>
<!--
    app:layout_constraintTop_toBottomOf="@+id/surnameInputLayout"
    ="5dp"
    tools:ignore="RtlHardcoded"
    ="8dp"/>-->

    <style name="DateSelectorButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/blackText</item>
    </style>

    <style name="SaveButton">
        <item name="android:text">@string/save</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>



</resources>